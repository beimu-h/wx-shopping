page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .meau {
  display: flex;
  height: calc(100vh - 90rpx);
}
.cates .meau .left_meau {
  flex: 2;
}
.cates .meau .left_meau .meau_items {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
}
.cates .meau .left_meau .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .meau .right_meau {
  flex: 4;
}
.cates .meau .right_meau .things_ifno .info_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .meau .right_meau .things_ifno .info_title .xian {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .meau .right_meau .things_ifno .info_cont {
  display: flex;
  flex-wrap: wrap;
}
.cates .meau .right_meau .things_ifno .info_cont navigator {
  width: 33.33%;
  text-align: center;
}
.cates .meau .right_meau .things_ifno .info_cont navigator image {
  width: 50%;
}
.cates .meau .right_meau .things_ifno .info_cont navigator .thing_name {
  font-size: 22rpx;
  margin-bottom: 21rpx;
}
